<%= form_for @discussion do |f| %>
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @discussion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :subject %>
    <br>
    <%= f.text_field :subject, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <br>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <br>
  <%= submit_tag 'Save', class: 'btn btn-sm btn-success' %>
  <%= link_to discussions_path do %><div class="btn btn-sm btn-primary">Back</div><% end %>
<% end %>
