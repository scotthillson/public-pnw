<%= form_for @event, html: { style: 'width:300px; margin:auto' } do |f| %>
  <% if @event.errors.any? %>
    <br>
    <div id="error_explanation">
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field text-center">
    <%= f.label :name, 'Description' %><br>
    <%= f.text_field :name, class: 'form-control text-center' %>
  </div>
  <div class="field text-center">
    <%= f.label :category %><br>
    <%= f.select :category, options_for_select(['Mountain','Cross','Road','Beer'],@event.category),{}, class: 'form-control text-center' %>
  </div>
  <div class="field text-center">
   <%= f.label :address %><br>
   <%= f.text_field :address, class: 'form-control text-center' %>
  </div>
  <div class="field text-center">
   <%= f.label :link %><br>
   <%= f.text_field :link, class: 'form-control text-center' %>
  </div>
  <div class="field text-center">
   <%= f.label :start_time, 'Date' %>
   <br>
   <%= f.date_field :start_time, class: 'form-control' %>
  </div>
  <div class="field text-center">
   <%= f.label :start_hour, 'Start Time' %>
   <br>
   <%= f.time_field :start_hour, class: 'form-control' %>
  </div>
  <div class="field text-center">
   <%= f.label :hours, 'Estimated Duration' %>
   <br>
   <%= f.select :hours, options_for_select((1..24),@ride.hours),{}, class: 'form-control text-center' %>
  </div>
  <div class="field text-center">
   <%= f.label :miles %>
   <br>
   <%= f.number_field :miles, class: 'form-control' %>
  </div>
  <div class="field text-center">
   <%= f.label :notes %>
   <br>
   <%= f.text_area :notes, class: 'form-control' %>
  </div>
  <br>
  <div class="text-center">
    <input name="commit" type="submit" value="Save" class="btn btn-sm btn-success">
  </div>
  <div class="text-center">
    <%= link_to 'Back', events_url, class: 'btn btn-sm btn-warning' %>
  </div>
<% end %>
