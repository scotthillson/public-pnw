<%= form_for(@carpool, html: {style: 'width:500px; float:left'}) do |f| %>
  <% if @carpool.errors.any? %>
    <div class="error-explanation">
      <ul>
      <% @carpool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :address, 'Meeting Location' %><br>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :event %>
    <br>
    <%= f.select :event, ['Monthly Training','RST Training','Conference','Incident'], {}, {class: 'form-control text-center'} %>
  </div>
  <div class="field">
    <%= f.label :seats_offered, 'Seats Offered' %>
    <br>
    <%= f.select :seats_offered, [1,2,3,4,5,6,7,8,9], {}, {class: 'form-control text-center'} %>
  </div>
  <div class="field">
    <%= f.label :event_date, 'Date' %>
    <br>
    <%= f.date_field :event_date, class: 'form-control', value: @carpool.event_date %>
  </div>
  <div class="field">
    <%= f.label :depart, 'Departs At' %>
    <br>
    <%= f.time_field :depart, class: 'form-control', value: '09:00' %>
  </div>
  <div class="field">
    <%= f.label :return, 'Estimated Return Time' %>
    <br>
    <%= f.time_field :return, class: 'form-control', value: '17:00' %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_field :notes, class: 'form-control' %>
  </div>
  <br>
  <%= submit_tag 'Save', class: 'btn btn-sm btn-success' %>
  <%= link_to carpools_path do %><div class="btn btn-sm btn-primary">Back</div><% end %>
  <% if @carpool.created_by == current_user %>
    <%= link_to 'Destroy',  @carpool,  method: :delete, data: { confirm: @carpool.destroy_message }, class: 'btn btn-danger pull-right' %>
  <% end %>
<% end %>
