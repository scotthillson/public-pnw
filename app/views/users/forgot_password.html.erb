<h1 class="text-center">Sign In</h1>
<%= form_tag password_email_path, style: 'width:300px;margin:auto', class: 'text-center' do %>
  <p>
    <%= label_tag :email %>
    <br>
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </p>
  <input name="commit" type="submit" value="Email Password Link" class="btn btn-sm btn-primary">
<% end %>